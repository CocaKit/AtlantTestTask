{% extends 'base.html.twig' %}

{% block title %}New human{% endblock %}

{% block body %}
    <div class='unit entity-form medium center'>
        {% if errors is defined %}
            {% for error in errors %}
                <div class='error-msg'>
                    {{ error.message }}
                </div>
            {% endfor %}
        {% endif %}
        {{ form_start(form) }}
            {{ form_widget(form.FirstName, { attr : { 'placeholder' : 'First Name' }}) }}
            {{ form_widget(form.LastName, { attr : { 'placeholder' : 'Last Name' }}) }}
            {{ form_widget(form.age, { attr : { 'placeholder' : 'Age' }}) }}
            <button type="submit" class="btn">Add</button>
        {{ form_end(form) }}
    </div>
{% endblock %}