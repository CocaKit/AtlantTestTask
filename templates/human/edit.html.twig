{% extends 'base.html.twig' %}

{% block title %}Edit human{% endblock %}

{% block body %}
    <div class='medium center'>
        <div class='unit entity-form'>
            {% if errors is defined %}
                {% for error in errors %}
                    <div class='error-msg'>
                        {{ error.message }}
                    </div>
                {% endfor %}
            {% endif %}
            {{ form_start(form) }}
                {{ form_widget(form.FirstName, { attr : { 'placeholder' : 'First Name' }}) }}
                {{ form_widget(form.LastName, { attr : { 'placeholder' : 'Last Name' }}) }}
                {{ form_widget(form.age, { attr : { 'placeholder' : 'Age' }}) }}
                <button type="submit" class="btn">Update</button>
            {{ form_end(form) }}
        </div>
        <form class='right' action="/human/delete/{{ human.id }}">
            <button class="btn" type="submit">Delete</button>
        </form>
    </div>
{% endblock %}